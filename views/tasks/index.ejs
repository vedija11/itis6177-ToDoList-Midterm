<h2 class="page-header">Search Task</h2>
<form action="/tasks" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Task Name</label>
      <input type="text" name="taskName" value="<%= searchOptions.taskName %>">
    </div>
  </div>
  <div class="form-row">
    <div class="form-item">
      <label>Scheduled At</label>
      <input type="date" name="scheduledDate" value="<%= searchOptions.scheduledDate %>">
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<br>
<div class="task-list">
    <% tasks.forEach(task => { %>
        <a href="/tasks/<%= task.id %>">
            <div class="task-row">
              <div class="task-name"><%= task.taskName %></div>
            </div>
        </a>
    <% }); %>
</div>